<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/order_info"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_marginLeft="12dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="3dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/firm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Имя фирмы"
            android:textColor="@color/dark_purple"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/type_of_sending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Тип посылки"
            android:textColor="@color/light_purple"
            android:textSize="12sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/addresses"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/white">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/address_icon" />

            <TextView
                android:id="@+id/from_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/montserrat"
                android:text="Откуда"
                android:textColor="@color/dark_purple"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/to_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/montserrat"
                android:text="Куда"
                android:textColor="@color/dark_purple"
                android:textSize="12sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Цена в рублях"
            android:textColor="@color/dark_purple"
            android:textSize="16sp" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/cbBox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:buttonTint="@color/light_purple"
        android:textColorLink="@color/light_purple"></CheckBox>

</LinearLayout>